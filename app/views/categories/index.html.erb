<%= render "titleBar" %>
<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<br>
<%= link_to 'New Category', new_category_path, class: 'button round' %>
<br>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category, class: 'button round' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'button round' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button round' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
